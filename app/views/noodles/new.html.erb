<!doctype html>
<html lang="ja">
<head>
  <% content_for :title do%>
    追加
  <% end %>
</head>
<body>
<div class="container">
<h2 class="underline">追加フォーム</h2>
<%= form_with model: @noodle, url: create_noodle_path, local: true do |form| %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
  <p>
  <label for="name">名前</label>
  <%= form.text_field :name, :class=>"full-width", :id=>"name", :name=>"name"%>
  </p>
  <p>
  <label for="name">画像</label>
  <%= form.file_field :photo, :class=>"full-width", :id=>"photo", :name=>"photo"%>
  </p>
  <p>
  <label for="name">位置情報</label>
  <%= button_tag "検索", :type=>"button", :onclick=>"findLocations()" %>
  <%= form.text_field :location, :class=>"full-width", :id=>"location", :name=>"location"%>
  </p>
  <p>
  <%= form.submit "送信", :class=>"button" %>
  </p>
<% end %>
</div>
</body>

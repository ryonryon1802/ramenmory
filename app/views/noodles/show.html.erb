<!doctype html>
<html lang="ja">
<head>
  <% content_for :title do%>
    詳細
  <% end %>
</head>
<body>
    <main>
<section>
<div class="container">
	<h2 class="catch">詳細</h2>
  <div>
    <figure class="center">
        <%= image_tag @noodle.photo.url if @noodle.photo? %>
        </figure>
    <h2 class="center"><%= @noodle.name %></h2>
    <h5 class="center"><%= "店名：#{@noodle.store}" %></h5>
    <h5 class="center"><%= link_to "場所：#{@noodle.location}" , "https://www.google.com/maps/search/?api=1&query=#{@noodle.store}+#{@noodle.location}", target: :_blank, rel: "noopener noreferrer" %></h5>
    </div>
    <p class="center">
        <%= button_to "編集", edit_noodle_path, method: :get, :form_class=>"center" %>
    </p>
    <p class="center">
        <%= button_to "削除", noodle_path, method: :delete, :form_class=>"center" %>
    </p>
          </div>
</section>
    </main>
</body>

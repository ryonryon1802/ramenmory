<!doctype html>
<html lang="ja">
<% content_for :title do %>
    Ramenmory
<% end %>

<body>
    <main>
<section>
<div class="container">
	<h2 class="catch">最近のラーメン</h2>
<% @recent_noodles.each_slice(3) do |n1, n2, n3| %>
  <div class="row">
    <div class="col span-4">
    <% unless n1.nil? %> <!-- 中身がnilのときにエラーになるため -->
      <figure>
        <%= image_tag n1.photo.url if n1.photo? %>
        </figure>
      <% end %>
    </div>
    <div class="col span-4">
    <% unless n1.nil? %>
      <figure>
        <%= image_tag n2.photo.url if n2.photo? %>
        </figure>
      <% end %>
    </div>
    <div class="col span-4">
    <% unless n1.nil? %>
      <figure>
        <%= image_tag n3.photo.url if n3.photo? %>
        </figure>
      <% end %>
    </div>
  </div>
<% end %>
  <p class="center">
    <%= button_to "その他のギャラリー", "noodles", method: :get, :form_class=>"center" %>
  </p>
        </div>
</section>
    </main>
</body>
